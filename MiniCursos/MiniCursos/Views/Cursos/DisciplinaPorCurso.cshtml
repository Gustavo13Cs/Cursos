@model IEnumerable <MiniCursos.Models.Disciplinas>
@{
    ViewBag.Title = "DisciplinaPorCurso";
    var nomecurso = Model.ToList().First();
}

<div class="row">
    <h2>Disciplinas do Curso: @nomecurso.Cursos.CURSODESCRICAO</h2>
</div>
<div class="row">
    <table class="table">
        <tr>
            <td>ID</td>
            <td>Disciplina</td>
            <td>Carga Horaria</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DISID</td>
                <td>@item.DISDESCRIACAO</td>
                <td>@item.DISCH</td>
            </tr>
        }
    </table>
</div>


