@model IEnumerable<MiniCursos.Models.Cursos>
@{
    ViewBag.Title = "index";
}
<div class="row">
    <div class="col-md-6">
        <h2>Lista de Cursos <a class="btn btn-success" href="/Cursos/Create">Novo</a></h2>
    </div>
    <div class="col-md-6">
        <h3 class="h3right">
        Total de Cursos: @ViewBag.qtdCursos
        </h3>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cursos</th>
            <th>Habilidade</th>
            <th>Modalidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CURSOID</td>
                <td>@item.CURSODESCRICAO</td>
                <td>@item.CURSOCODHABILIDADE</td>
                <td>@item.CURSOMODALIDADE</td>

                <td>
                    <a href="/Cursos/Editar?id=@item.CURSOID"><button type="button" class="btn btn-warning">Editar</button></a>
                    <a href="/Cursos/Detalhes?id=@item.CURSOID"><button type="button" class="btn btn-primary">Exibir</button></a>
                    <a href="/Cursos/Excluir?id=@item.CURSOID"><button type="button" class="btn btn-danger">Excluir</button></a>
                </td>
            </tr>
        }
        </tbody>
    </table>

