@model IEnumerable<MiniCursos.Models.Disciplinas>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>Lista de Disciplinas <a class="btn btn-success" href="/Disciplinas/Create">Novo</a></h2>
    </div>
    <div class="col-md-6">
        <h3 class="h3right">
            Total de Disciplinas: @ViewBag.qtdDisciplinas
        </h3>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descrição</th>
            <th>ID Do Curso</th>
            <th>Carga Horaria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DISID</td>
                <td>@item.DISDESCRIACAO</td>
                <td>@item.CURSOID</td>
                <td>@item.DISCH</td>

                <td>
                    <a href="/Disciplinas/Editar?id=@item.DISID"><button type="button" class="btn btn-warning">Editar</button></a>
                    <a href="/Disciplinas/Detalhes?id=@item.DISID"><button type="button" class="btn btn-primary">Exibir</button></a>
                    <a href="/Disciplinas/Excluir?id=@item.DISID"><button type="button" class="btn btn-danger">Excluir</button></a>
                </td>
            </tr>
         }
        </tbody>
    </table>


